<resources>
    <!-- Base application theme. -->
    <style name="Theme.WeatherDataViewer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- TextViw background drawable reference -->
        <item name="inpTextFrameBgDrawable">@drawable/input_textview_frame</item>
        <item name="inpTextFrameFgColor">@color/purple_700</item>
        <!-- Button textColor, background color -->
        <item name="updateButtonTextColor">@color/white</item>
        <item name="updateButtonBgColor">@color/purple_500</item>
        <!-- for custom Button drawable -->
        <item name="disabledAlpha">@dimen/disabledAlpha</item>
        <!-- NyApp primary textColor on BgColor yellow  -->
        <item name="myAppPrimaryTextColor">@color/black</item>
        <!-- Custom SpinnerItem / SpinnerDropdownItem textColor -->
        <item name="spinnerTextColor">@color/black</item>
        <item name="spinnerBgColor">@color/teal_200</item>
        <!-- アプリの全てのスピナーPopupの背景 -->
        <item name="spinnerPopupBgColor">@color/teal_200</item>
        <!-- Warning TextView on Light -->
        <item name="warningBgDrawable">@drawable/title_textview_frame</item>
        <!-- @android:color/red is private -->
        <item name="warningFgColor">@color/solid_red</item>
        <!-- Custom ActionBarStyle -->
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyAppActionBar</item>
    </style>
    <!-- Default -->
    <style name="Theme.WeatherDataViewer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.HealthCare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.HealthCare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom ActionBarStyle -->
    <!-- Custom TitleTextStyle: textSize(phone=20sp-3sp/Tablet=20sp+1sp)  -->
    <style name="MyAppActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
    </style>
    <!-- Custom SubTitleTextStyle: textSize(phone:16sp -3sp/Tablet=16+1sp) -->
    <style name="MyAppActionBar.SubtitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/action_bar_subtitle_text_size</item>
    </style>
    <style name="MyAppActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyAppActionBar.TitleTextStyle</item>
        <item name="subtitleTextColor">@style/MyAppActionBar.SubtitleTextStyle</item>
    </style>
</resources>
