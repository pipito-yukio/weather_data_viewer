<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/khaki">

    <ImageView
        android:id="@+id/currentTimeDataGraph"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="3dp"
        android:padding="@dimen/label_padding"
        android:scaleType="fitXY"
        android:background="@drawable/frame_background"
        android:contentDescription="@string/IMG_contentDescription"
        />

    <TextView
        android:id="@+id/valGraphResponseStatus"
        android:visibility="gone"
        style="@style/StyleResponseStatus"
        />

    <LinearLayout
        android:gravity="center_vertical"
        style="@style/StytleButtonContainer"
        >

        <Button
            android:id="@+id/btnImageUpdate"
            android:text="@string/lbl_btn_update"
            style="@style/StyleButtonUpdate"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >
            <RadioGroup
                android:id="@+id/dayGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radioToday"
                    android:text="@string/lbl_today"
                    style="@style/StyleRadio"
                    />
                <RadioButton
                    android:id="@+id/radioBefore"
                    android:text="@string/lbl_range_days"
                    style="@style/StyleRadio"
                    />
            </RadioGroup>

            <!-- LinearLayout: spinner improving appearance box -->
            <LinearLayout
                android:id="@+id/SpinnerFrame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/value_padding"
                style="@android:style/Widget.Material.Button.Colored"
                >
                <Spinner
                    android:id="@+id/cboBoforeDays"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/todays_item_height"
                    android:dropDownWidth="match_parent"
                    android:popupBackground="@color/teal_200"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/white"
                    android:entries="@array/beforeDays"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/black"
                android:text="@string/lbl_before_days"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
